<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.cell.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>

<VBox prefHeight="200.0" prefWidth="472.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" text="Betriebe" textAlignment="CENTER">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TableView fx:id="companyTableView" editable="true" prefHeight="200.0" prefWidth="70.0" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn onEditCommit="#editName" prefWidth="75.0" text="Name">
            <cellValueFactory>
              <PropertyValueFactory property="companyName" />
	        </cellValueFactory>
          </TableColumn>
          <TableColumn onEditCommit="#editNumber" prefWidth="114.0" text="Betriebsnummer">
            <cellValueFactory>
              <PropertyValueFactory property="companyNumber" />
	        </cellValueFactory>
          </TableColumn>
          <TableColumn minWidth="0.0" onEditCommit="#editBookkeepingAppointment" prefWidth="223.0" text="Buchstelle">
            <cellValueFactory>
              <PropertyValueFactory property="companyBookkeepingAppointment" />
	        </cellValueFactory>
          </TableColumn>
        </columns>
      </TableView>
      <HBox prefHeight="32.0" prefWidth="472.0" VBox.vgrow="NEVER">
         <children>
            <Label text="Keine Änderungen" HBox.hgrow="NEVER">
               <HBox.margin>
                  <Insets bottom="5.0" left="3.0" right="3.0" top="5.0" />
               </HBox.margin>
            </Label>
            <Pane HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#add" text="Hinzufügen" HBox.hgrow="NEVER">
               <HBox.margin>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#cancel" text="Abbrechen" HBox.hgrow="NEVER">
               <HBox.margin>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#persist" text="OK" HBox.hgrow="NEVER">
               <HBox.margin>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
