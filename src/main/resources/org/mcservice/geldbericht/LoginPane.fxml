<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" prefHeight="0.0" prefWidth="255.0" spacing="5.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.mcservice.geldbericht.LoginController">
    <children>
      <TextField fx:id="usernameInputField" prefHeight="20.0" promptText="Benutzername" />
      <PasswordField fx:id="passwordInputField" prefHeight="20.0" promptText="Passwort" />
      <Pane minHeight="-Infinity" prefHeight="20.0">
         <children>
            <ProgressBar fx:id="progressBar" prefWidth="245.0" progress="0.0" />
            <Label fx:id="progressbarLabel" text="Datenbank Verbindung erstellen">
               <padding>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </padding>
            </Label>
         </children>
      </Pane>
      <Button fx:id="loginButton" onAction="#login" prefHeight="20.0" text="Anmelden" />
    </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
